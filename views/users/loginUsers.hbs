    <section class="login_part">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6 col-md-12">
                    <a href="/" class="btn_3 position-absolute" > < </a>
                    <div class="login_part_text text-center">
                         
                        <div class="login_part_text_iner">
                            <h2>New to our Shop?</h2>
                            <p>There are advances being made in science and technology
                                everyday, and a good example of this is the</p>
                            <a href="/signup" class="btn_3">Create an Account</a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 col-md-12 mt-2">
                    <div class="login_part_form">
                        <div class="login_part_form_iner">
                        
                            <form class="row contact_form" action="/login" method="post" style="">
                                

       
                                <div class="col-md-12 form-group p_star mt-2">
                                    <input type="email" class="form-control" id="email" name="email"
                                        placeholder="Email"   required=""  style="background-color:aqua ; border-radius :12px;">
                                         {{#if user}}
                                <p class="text-danger">Incorrect Mail Id</p>
                                {{/if}}
                                </div>
                                   <div class="col-md-12 form-group p_star mt-2">
                                    <input type="password" class="form-control" id="password" name="password" 
                                        placeholder="Password" required=""  style="background-color:aqua ; border-radius :12px;">
                                          {{#if wrongpassword}}
                                <p class="text-danger">Wrong Password</p>
                                {{/if}}
                                </div>
                                <div class="col-md-12 form-group">
                                
                                    <button type="submit" value="submit" class="btn_3">
                                        log in
                                    </button>
                                
                                </div>
                                
                            </form>

                             <form action="/otppage" method="post">


                                 <div class="col-md-12 form-group p_star mt-5">
                                                            
                                    <label for="phonenumber">Login with OTP</label>
    
                                    <input type="number" class="form-control numinput" id="password" name="phonenumber" value=""  
                                        placeholder="Enter Your Phone Number"  style="background-color:aqua ; border-radius :12px;">
                                </div>
                                     <div class="col-md-12 form-group">
                                
                                    <button type="submit" value="submit" class="btn_3 mb-2">
                                    Get OTP
                                    </button>
                                      {{#if numbernotfound}}
                                 <p>You should signup first</p>
                                 {{else}}
                                 <p></p>
                                    {{/if}}
                                </div>

                            

                               
                               
                                </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
  

   