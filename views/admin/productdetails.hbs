
{{!-- //////////////////////////////////product list//////////////////////////////////////// --}}



<div class="container">
    <div class="d-flex justify-content-end">
        <a class="btn btn-primary mt-4" href="/admin/addproduct">Add Product</a>
    </div>
    <section class="mt-5">
        <table id="example" class="container-fluid table table-striped mx-auto border shadow-lg" style="width:100%;">
            <thead>
                <tr>
                    <th>Product Name</th>
                    <th>Price</th>
                    <th>Discount Price</th>
                    <th>Category</th>
                    <th>Image</th>
                    <th>Stock</th>
                    <th>Change Status</th>
                </tr>
            </thead>
            <tbody>


                {{#each product}}


                <tr>
                    <td>{{this.productname}}</td>
                    <td>₹ {{this.price}}</td>
                    <td>₹ {{this.discountprice}}</td>
                    <td>{{categoryname.categoryname}}</td>
                    <td> <img src="/productimages/{{this.image.[0]}}" alt="" width="50em"></td>
                    <td>{{this.stock}}</td>
                    <td>

                        <a class="btn btn-info" role="button" href="/admin/edit-product/{{this._id}}">Edit</a>
                        <a class="btn btn-danger" href="/admin/delete-product/{{this._id}}"
                            onclick="return confirm('Are you sure you want to delete product {{this.productname}} ?')">Delete</a>

                    </td>
                </tr>


                {{/each}}


            </tbody>

        </table>
    </section>
</div>

<script>
    $(document).ready(function () {
        $('#example').DataTable({
        scrollX: '200px',
        scrollCollapse: true,
        paging: true,
        "ordering": false,
    });
    });
</script>



