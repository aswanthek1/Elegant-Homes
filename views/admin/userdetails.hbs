 
    








<div class="container">
    <div class="row">
    {{!-- <div class="d-flex justify-content-end">
        <a class="btn btn-primary mt-4" href="/admin/addproduct">Add Product</a>
    </div> --}}
    <section class="mt-5" >
        <table id="example" class="container-fluid table table-striped mx-auto border shadow-lg" style="width:100%;">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>E-mail</th>
                    <th>PhoneNumber</th>
                    <th>Status</th>
                    <th>Change Status</th>
                </tr>
            </thead>
            <tbody>


                 {{#each users}}


                <tr>
      <td>{{this.name}}</td>
      {{!-- <td>{{this.lname}}</td> --}}
      <td>{{this.email}}</td>
      <td>{{this.phonenumber}}</td>
      {{#if this.status}}
      <td style="color: red;">Blocked</td>
      {{else}}
      <td style="color: green;">Active</td>
      {{/if}}
      
      
      <td>
        {{#if this.status}}
        <a class="btn btn-success" href="/admin/activate-user/{{this._id}}" onclick="return confirm('Are you sure you want to activate user {{this.name}} ?')">Unblock</a>
        {{else}}
         <a class="btn btn-danger" href="/admin/block-user/{{this._id}}" onclick="return confirm('Are you sure you want to block user {{this.name}} ?')">block</a>
        {{/if}}
        {{!-- <a class="btn btn-danger" href="/delete-user/{{this._id}}" onclick="return confirm('Are you sure you want to delete user {{this.fname}} ?')">delete</a> --}}
        </td>
    </tr>


                {{/each}}


            </tbody>

        </table>
    </section>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#example').DataTable({
        scrollX: '200px',
        scrollCollapse: true,
        paging: true,
        "ordering": false,
    });
    });
</script>