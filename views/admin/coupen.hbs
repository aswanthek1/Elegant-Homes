    <thead>
        <tr>
            <th>Coupen Name</th>
            <th>Coupen Code</th>
            <th>Discount</th>
            <th>Change Status</th>
        </tr>
    </thead>
    
    <tbody>
        {{#each allCoupens}}
        <tr>
            <td>{{this.coupenName}}</td>
            <td>{{this.coupenCode}}</td>
